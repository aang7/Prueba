<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CameraRecorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:baselineAligned="false"
    >
    <!--android:scaleX="-1"-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <FrameLayout
            android:id="@+id/menuContainer"
            android:background="#eee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            >
        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/menuContainer"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom"
                android:layout_toLeftOf="@+id/buttonPanel"
                android:layout_toStartOf="@+id/buttonPanel">
                <!--android:visibility="gone"-->
                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#aaa"
                    android:orientation="horizontal">
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/surfaceViewParent"
                    android:visibility="invisible"
                    android:orientation="horizontal">
                    <SurfaceView android:id="@+id/surfaceView"

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>
                </LinearLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:id="@+id/buttonPanel">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REC"
                    android:id="@+id/StartService"
                    android:layout_marginTop="10dp"/>
                <!--<Button
                    android:id="@+id/toggle_visibility"
                    android:text="Visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    />
                -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flip"
                    android:id="@+id/FlipVIew"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ledIndicator"

                        android:layout_gravity="center_horizontal" />
                    <Chronometer
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chronometer"
                        android:textColor="@color/md_white_1000"

                        android:layout_alignBottom="@+id/ledIndicator"
                        android:layout_gravity="center_horizontal"
                        />
                </RelativeLayout>



            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>




</LinearLayout>
