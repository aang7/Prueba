<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ff000000"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bpTv"
        android:text="0 bp"

        android:visibility="invisible"

        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/altBaro"
        android:textSize="40sp"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/altGPS"

        android:visibility="invisible"

        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"
        android:layout_below="@+id/bpTv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"
        android:text="feet"
        android:layout_below="@+id/increase"
        android:layout_centerHorizontal="true" />


    <com.raddapp.radika.customgauge.AltimeterGauge
        android:id="@+id/altgauge"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"

        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        app:gaugePointStartColor="@color/md_red_500"
        app:gaugePointEndColor="@color/md_white_1000"

        app:gaugeDividerStep="8"
        app:gaugeDividerColor="@color/md_black_1000"
        app:gaugeDividerDrawFirst="false"
        app:gaugeDividerDrawLast="true"
        app:gaugeDividerSize="70"

        app:gaugeStartAngel="270"
        app:gaugeStrokeCap="BUTT"
        app:gaugeStrokeColor="@color/md_black_1000"
        app:gaugeStrokeWidth="20dp"
        app:gaugeStartValue="0"
        app:gaugeEndValue="12000"
        app:gaugeSweepAngel="360"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.raddapp.radika.customgauge.CustomGauge
        android:id="@+id/gauge"
        android:layout_centerInParent="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:gaugePointStartColor="@color/md_red_500"
        app:gaugePointEndColor="@color/md_red_500"
        app:gaugePointSize="6"
        app:gaugeStartAngel="270"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/md_grey_600"
        app:gaugeStrokeWidth="10dp"
        app:gaugeStartValue="0"
        app:gaugeEndValue="360"
        app:gaugeSweepAngel="360"
        app:gaugeChangePointEndColor="@color/md_green_600"
        app:gaugeChangePointStartColor="@color/md_green_600"
        />

    <com.raddapp.radika.customgauge.CustomGauge
        android:id="@+id/gaugeAtLocation"
        android:layout_centerInParent="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:gaugePointStartColor="@color/md_green_600"
        app:gaugePointEndColor="@color/md_green_600"
        app:gaugePointSize="6"
        app:gaugeStartAngel="270"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/md_green_600"
        app:gaugeStrokeWidth="10dp"
        app:gaugeStartValue="0"
        app:gaugeEndValue="360"
        app:gaugeSweepAngel="360"/>

    <TextView
        android:layout_alignTop="@+id/gaugeAtLocation"
        android:textColor="@color/md_white_1000"
        android:id="@+id/bearingToAngle"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/gauge"/>

    <TextView
        android:id="@+id/firstLocation"
        android:textColor="@color/md_white_1000"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/bearingToAngle"/>

    <TextView
        android:id="@+id/secondLocation"
        android:textColor="@color/md_white_1000"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/firstLocation"/>

    <TextView
        android:id="@+id/distance"
        android:textColor="@color/md_white_1000"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/secondLocation"/>
    <TextView
        android:id="@+id/accuracy"
        android:textColor="@color/md_white_1000"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/distance"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="invisible"

        android:text="+"
        android:id="@+id/increase"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="invisible"
        android:text="-"
        android:id="@+id/decrease"
        android:layout_below="@+id/increase"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
